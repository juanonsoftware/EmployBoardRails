
<div class="col" id="<%= dom_id employee %>">
        <div class="card shadow-sm">
              <%= image_tag employee.image_as_thumbnail, class: "card-img-top" if employee.avatar.attached? %>

          <div class="card-body">
            <h5 class="card-title"><%= employee.full_name %></h5>
            <p class="card-text">
              Email: <%= employee.email %>
            </p>

            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "View", employee, class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-sm btn-outline-secondary" %>
              </div>
              <small class="text-body-secondary">9 mins</small>
            </div>
          </div>
        </div>
      </div>   